<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="64dp">

    <TextView
        android:id="@+id/tvSearchTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="28dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/tvTagCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSearchTag"
        android:paddingLeft="28dp"
        android:textSize="14sp"
        android:textColor="@color/light_gray_text"
        android:fontFamily="sans-serif"/>

    <View
        android:id="@+id/separatorLineForUser"
        android:layout_below="@id/tvTagCount"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:background="@color/light_gray_separator_line"
        android:layout_height="1dp"/>

</LinearLayout>