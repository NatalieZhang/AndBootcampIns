<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvCommentProfileImage"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="16dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/gray_oval"
        fresco:roundAsCircle="true"/>

    <TextView
        android:id="@+id/tvCommentAndUserName"
        android:layout_toRightOf="@id/sdvCommentProfileImage"
        android:layout_alignTop="@id/sdvCommentProfileImage"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCommentTimeStamp"
        android:layout_centerVertical="true"
        android:layout_below="@id/tvCommentAndUserName"
        android:layout_alignLeft="@id/tvCommentAndUserName"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/light_gray_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>