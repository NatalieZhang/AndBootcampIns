<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:paddingTop="12dp"
              android:layout_height="64dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvUserImage"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:roundAsCircle="true"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sdvUserImage"
        android:layout_alignTop="@id/sdvUserImage"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/gray_text" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserName"
        android:layout_toRightOf="@id/sdvUserImage"
        android:layout_alignBottom="@id/sdvUserImage"
        android:textSize="14sp"
        android:textColor="@color/light_gray_text"
        android:fontFamily="sans-serif"/>

    <View
        android:id="@+id/separatorLineForUser"
        android:layout_below="@id/sdvUserImage"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:background="@color/light_gray_separator_line"
        android:layout_height="1dp"/>

</RelativeLayout>